<component name="InspectionProjectProfileManager">
  <settings>
    <!-- Use IDE's global inspection profile -->
    <option name="USE_PROJECT_PROFILE" value="true" />
    <option name="PROJECT_PROFILE" value="Default" />
    <option name="USE_TEXT_ATTRIBUTES_INSTEAD_OF_COLORS" value="true" />

    <!-- Enable modern inspection engine -->
    <option name="INSPECTION_PROFILE_VERSION" value="2.0" />

    <!-- Define severity levels for better linting feedback -->
    <inspection_tool class="PyPep8NamingInspection" enabled="true" level="WARNING" />
    <inspection_tool class="PyUnresolvedReferencesInspection" enabled="true" level="ERROR" />
    <inspection_tool class="PyBroadExceptionInspection" enabled="true" level="WEAK WARNING" />
    <inspection_tool class="PyCompatibilityInspection" enabled="true" level="WARNING" />
    <inspection_tool class="PyMissingTypeHintsInspection" enabled="true" level="INFO" />
    <inspection_tool class="PyArgumentListInspection" enabled="true" level="ERROR" />
  </settings>
</component>
